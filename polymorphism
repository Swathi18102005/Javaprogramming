//overiding
class Vehicle {
    public void drive() {
        System.out.println("drive");
    }
}

class Bike extends Vehicle {
    @Override
    public void drive() {
        System.out.println("driving bike");
    }
}

class Car extends Vehicle {
    @Override
    public void drive() {
        System.out.println("driving car");
    }
}

public class Main {
    public static void main(String[] args) {
        Vehicle v = new Bike();
        v.drive(); 

        Vehicle a = new Car();
        a.drive(); 

        Vehicle b = new Vehicle();
        b.drive(); 
    }
}

//bank
class Payment{
    public void mode(){
        System.out.println("Payment");
    }}
    
class UPI extends Payment{
    @Override
    public  void mode(){
        System.out.println("UPI");
    }}
class credit extends Payment{
    @Override
    public void mode(){
        System.out.println("credit");
    }
}
class Bank_transfer extends Payment{
    @Override
    public void mode(){
        System.out.println("Bank transfer");
    }
}

public class Main
{
	public static void main(String[] args) {
	    Payment a;
	    a=new UPI();
	    a.mode();
	    
	    a=new credit();
	    a.mode();
	    
	     a=new Bank_transfer();
	    a.mode();
	    
	     a=new Payment();
	    a.mode();
	    
	}
}

//
public class Main {
    public static void main(String[] args) {
        int i = 1;
        int j = i++ + ++i; 

        System.out.println("i: " + i);
        System.out.println("j: " + j);
    }
}

//employee salary overriding
class Employee {
    public void salary() {
        System.out.println("employee salary");
    }
}

class Manager extends Employee {
    @Override
    public void salary() {
        System.out.println("person1 salary: 80,000");
    }
}

class Developer extends Employee {
    @Override
    public void salary() {
        System.out.println("person2 salary: 60,000");
    }
}

class Intern extends Employee {
    @Override
    public void salary() {
        System.out.println("person3 salary: 20,000");
    }
}

public class Main {
    public static void main(String[] args) {
        Employee e;

        e = new Manager();   
        e.salary();

        e = new Developer();
        e.salary();

        e = new Intern();
        e.salary();

        e = new Employee();
        e.salary();
    }
}
