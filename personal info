//Data type
it defines a type of data variable can hold it determines the size and range of values it can store
// 8types
                                range
1.Boolean          8bits        (T/F)  
2.Byte             8 bits      -128 to 127
3.Character        16bits       0 to 65.535
4.Short            16bits        
5.Integer or int   32bits
6.float            32 bits
7.long             64 bits
8.double           64 bits

import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner data= new Scanner(System.in);
        String name;
        System.out.println("name:");
        name = data.nextLine();

        //char gender;
       // System.out.println("gender:");
        //gender = data.next().charAt(1);
        
        byte age;
        System.out.println("age:");
        age = data.nextByte();

        short spr;
        System.out.println("spr:");
        spr = data.nextShort();

        int year;
        System.out.println("year:");
        year = data.nextInt();

        long phone;
        System.out.println("phone num:");
        phone = data.nextLong();

        float height;
        System.out.println("height:");
        height = data.nextFloat();

        double weight;
        System.out.println("weight:");
        weight = data.nextDouble();
        
        boolean student ;
        System.out.println("student true/false:");
        student = data.nextBoolean();


    }
}
