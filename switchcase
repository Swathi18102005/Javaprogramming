//The switch statement allows a choice from a number of options. It will test a number of cases against a variable of type char, byte, short, or int.

//syntax
switch (variable)
{
 case value0:
 // block to execute
 break;
 case value1:
 // block to execute
 break;
 default:
 // block to execute
}


//switch case
import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        
        System.out.print("Enter dayno : ");
        int day = input.nextInt();
        String dayname ;

        switch (day) {
            case 1:
                dayname = "Sunday";
                break;
            case 2:
                dayname = "Monday";
                break;
            case 3:
                dayname = "Tuesday";
                break;
            case 4:
                dayname = "Wednesday";
                break;
            case 5:
                dayname = "Thursday";
                break;
            case 6:
                dayname = "Friday";
                break;
            case 7:
                dayname = "Saturday";
                break;
            default:
                dayname = "invalid data";
        }

        System.out.println("day: " + dayname);
    }
}
