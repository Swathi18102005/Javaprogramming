//the condition is checked first in a while loop it is possible that the loop may never execute. This type ensures that the loop block executes at least
once by placing the condition at the end of the loop

//syntax
do
{
 // loop block
} while

//do while
import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner data = new Scanner(System.in);

        int num;
        System.out.print("enter num: ");
        num=data.nextInt();
        do 
       {
            if (num % 2 == 0) 
            {
                System.out.println(num + " is even");
            } else
            {
                System.out.println(num + " is odd");
            }
            num--;
        }
        while (num>=0);
    }
}


    
